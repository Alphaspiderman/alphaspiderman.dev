---
import "../styles/global.css";
import Footer from "@/components/Footer.astro";
import { ModeToggle } from "@/components/ModeToggle";
import BackgroundImage from "../components/BackgroundImage.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Alphaspiderman | Developer Portfolio</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body
    class="bg-white text-gray-900 min-h-screen flex flex-col transition-colors duration-300 dark:bg-gray-900 dark:text-gray-50"
  >
    <div
      style="position: fixed; inset: 0; z-index: 0; width: 100vw; height: 100vh; pointer-events: none;"
    >
      <BackgroundImage bg="/assets/bg-light.png" bgDark="/assets/bg-dark.png" />
    </div>
    <div style="position: fixed; bottom: 1.5rem; right: 1.5rem; z-index: 50;">
      <ModeToggle client:load />
    </div>
    <main style="position: relative; z-index: 1;">
      <slot />
      <Footer />
    </main>
  </body>
</html>

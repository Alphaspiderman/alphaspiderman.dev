---
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
import Skills from "@/components/Skills.astro";
import Projects from "@/components/Projects.astro";
---

<Layout>
  <Hero>
    <p class="text-center max-w-xl mb-6 text-gray-700 dark:text-gray-300 z-10">
      Building, hosting, and securing web applications. Passionate about
      automation, open source, and learning new tech.
    </p>
    <div class="flex gap-6 mb-8 z-10">
      <a
        href="mailto:Alphaspiderman@protonmail.com"
        class="text-blue-700 dark:text-blue-300 hover:underline"
        >Alphaspiderman@protonmail.com</a
      >
      <span class="text-gray-400 dark:text-gray-500">|</span>
      <span class="text-gray-900 dark:text-gray-200">Internet</span>
    </div>
    <div class="flex gap-4 mb-10 z-10">
      <a
        href="https://github.com/Alphaspiderman"
        class="text-gray-900 dark:text-white hover:text-black dark:hover:text-blue-400 text-lg font-medium"
        target="_blank"
        rel="noopener">GitHub</a
      >
      <a
        href="https://www.linkedin.com/in/raghav-gupta-ind/"
        class="text-gray-900 dark:text-white hover:text-black dark:hover:text-blue-400 text-lg font-medium"
        target="_blank"
        rel="noopener">LinkedIn</a
      >
    </div>
  </Hero>
  <Skills />
  <Projects />
</Layout>

---
const config = {
  email: "Alphaspiderman",
  linkedin: "raghav-gupta-ind",
};
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/Hero.astro";
---

<Layout>
  <main class="relative flex flex-col items-center min-h-screen gap-6">
    <Hero>
      <div
        class="p-8 max-w-xl w-full z-10 mb-8 bg-white/80 dark:bg-gray-800/80 rounded-xl shadow-lg transition-colors duration-300"
      >
        <h1 class="text-4xl font-bold mb-8 text-black dark:text-white">
          Contact
        </h1>
        <p class="text-black dark:text-gray-200 text-lg font-medium mb-2">
          The best way to contact me is via:
        </p>
        <ul
          class="list-disc list-inside text-black dark:text-gray-200 space-y-2"
        >
          <li>
            <span>Email: </span>
            <a
              href={`mailto:${config.email}@protonmail.com`}
              class="text-blue-800 dark:text-blue-400 hover:text-blue-600 dark:hover:text-blue-300 underline"
              >{config.email}</a
            >
          </li>
          <li>
            <span>LinkedIn: </span>
            <a
              href={`https://www.linkedin.com/in/${config.linkedin}`}
              class="text-blue-800 dark:text-blue-400 hover:text-blue-600 dark:hover:text-blue-300 underline"
              target="_blank"
              rel="noopener">LinkedIn</a
            >
          </li>
        </ul>
      </div>
    </Hero>
  </main>
</Layout>

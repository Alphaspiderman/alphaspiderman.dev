---
import Layout from "../layouts/Layout.astro";
import { Button } from "@/components/ui/button";
import { Card } from "@/components/ui/card";
---

<Layout>
  <main
    class="flex flex-col items-center justify-center min-h-screen py-20 text-center px-6"
  >
    <Card
      className="mx-auto max-w-xl text-center p-8 bg-white/10 backdrop-blur-md border-0 shadow-lg"
    >
      <div class="space-y-6">
        <h1
          class="text-6xl font-extrabold mb-2 text-gray-800 dark:text-gray-100"
        >
          404
        </h1>

        <p class="text-lg md:text-2xl text-gray-600 dark:text-gray-300">
          Oops â€” this page went on a coffee break. Let's get you back on track.
        </p>

        <div class="flex flex-wrap gap-3 justify-center">
          <Button asChild>
            <a href="/">Go Home</a>
          </Button>
          <Button asChild>
            <a href="/contact">Contact Me</a>
          </Button>
        </div>

        <p class="mt-4 text-sm text-gray-500 dark:text-gray-400">
          Tip: Press <kbd
            class="px-2 py-0.5 bg-gray-100 dark:bg-gray-700 rounded">H</kbd
          > to go home.
        </p>
      </div>
    </Card>

    <script>
      document.addEventListener("keydown", function (e) {
        if (e.key && e.key.toLowerCase() === "h") {
          window.location.href = "/";
        }
      });
    </script>
  </main>
</Layout>
